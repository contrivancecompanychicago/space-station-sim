@font-face {
    font-family: Freshman;
    src: url(Freshman.ttf);
}

border-colour = #DD9877
background-colour = #876655
colour = #EECCA9

body, html {
  margin: 0;
  padding: 0;
  background: #111;
  font-family: Freshman;
}

canvas {
  position: absolute;
  z-index: 0;
}

.menu{
  position: absolute;
  top: 4px;
  right: 4px;
  z-index: 1;
}

.ui .panel{
  border: 1px solid border-colour;
  background-color: background-colour;
  color: colour
  padding: 4px;
  text-align: right;
  width: 200px;
  border-radius: 4px;
}

.ui h3{
  margin: 3px;
  font-weight: normal;
  border-radius: 4px;
  border: 1px solid border-colour
  color: background-colour
  background-color: colour
  padding: 2px
  font-size: 16px
  text-align: left
}

.ui button{
  /*padding-top: 0;*/
  width: 50px;
  height: 50px;
  font-size: 10px;
  padding: 0px 0px;
}
.ui .grid button{

}
.ui button.selected{
  background-color: yellow;
}
.ui button img{
  width: 32px;
  height: 32px;
}

.ui .panel .order div{
  border:1px solid black;
  display:inline;
  font-size: 10px;
}
.ui .panel.log{
  position: absolute
}
.ui .panel .log .message{
  border:1px solid black;
  font-size: 10px;
}
